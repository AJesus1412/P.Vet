<!--Div para crear ventana emergente de login-->
<div id="auth-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
      <div class="modal-content">
          <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          </div>
          <div class="modal-body">
              <div class="auth-modal-content">
                  <div id="login-modal-body"></div>
                      <h2>Inicio de sesión</h2>
                      <hr>
                      <%= form_for(resource, :as => :user, :url => session_path(:user), :class => 'form-horizontal') do |f| %>
                        <div class="form-group ">
                          <%= f.label :email, :class => 'col-sm-4 control-label required'  %>
                          <div class="controls col-sm-8">
                            <%= f.email_field :email, :class => 'form-control' %>
                          </div>                          
                        </div>

                         <div class="form-group ">
                          <%= f.label :password, :class => 'col-sm-4 control-label required'  %>
                          <div class="controls col-sm-8">
                            <%= f.password_field :password, :class => 'form-control' %>
                            <%= link_to "Olvide mi contraseña", new_password_path(:user) %>
                          </div>                          
                        </div>

                        <div class="form-group">
                          <%= f.label :remember_me, :class => 'col-sm-4 control-label' %>
                          <div class="controls col-sm-8">
                            <div class="checkbox">
                              <%= f.check_box :remember_me %>
                            </div>
                          </div>
                        </div>

                        <div class="form-group">
                          <div class="col-sm-offset-4 col-sm-8">
                            <%= f.submit 'Iniciar Sesión', :class => 'btn btn-primary btn-lg btn-block' %>

            <p></p>
            <strong><p>Si eres un usuario nuevo <%= link_to "Registrese aquí", new_user_registration_path %></p></br></strong>
            <strong><p>¿Eres una veterinaria? <%= link_to "Registrese o inicia sesión aquí", new_vet_session_path %></p>
            </strong>



                          </div>
                        </div>
                        <div style="clear:both;"></div>
                    <% end %>
                        <div id="registration-modal-body"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

