<div class="row">
  <div class="col-sm-12" id="featured">
    <div class="page-header text-muted">
      Mis Mascotas
    </div>
  </div>
</div>
<div class="row"> 
  <div class="col-sm-12">
    <% if @pets.count  > 0 %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Edad</th>
          <th>Genero</th>
          <th>Tipo</th>
          <th>Raza</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @pets.each do |pet| %>
        <tr>
          <td><%= pet.name %></td>
          <td><%= pet.age %></td>
          <td><%= pet.gender %></td>
          <td><%= pet.family.name %></td>
          <td><%= pet.breed.name %></td>
          <td><%= link_to 'Editar', edit_pet_path(pet) %> | 
            <%= link_to 'Eliminar', pet, method: :delete, data: { confirm: 'Está seguro de eliminar?' } %>
          </td>
        </tr>
      <% end %>  
      </tbody>
    </table>
    <br>
    <%= link_to 'Nueva mascota', new_pet_path %>
    <% end%>
    <% if @pets.count == 0 %>
      <p> Usted no tiene mascotas, favor registrelas <%= link_to 'aquí', new_pet_path %> </p>
    <% end %>
  </div>
</div>