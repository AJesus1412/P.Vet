<div class="col-sm-12" id="featured">   

  <div class="page-header text-muted">
                            Mis Mascotas
  </div> </div>
  <div class="row"> 
  <div class="col-md-8">

<% if @pets.count  > 0 %>

     <table>
  <thead>
    <tr>
      
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Family</th>
      <th>Breed</th>
      <th>Otherdetails</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.gender %></td>
        <td><%= pet.family %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.otherDetails %></td>
        <td><%= pet.user_id %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% end%>
<% if @pets.count == 0 %>

<p> Usted no tiene mascotas, favor registrelas aqui </p>

<% end %>
<%= link_to 'Registrar Mascota', new_pet_path %>


