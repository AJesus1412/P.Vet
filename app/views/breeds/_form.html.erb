<%= form_for(@breed) do |f| %>
  <% if @breed.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@breed.errors.count, "error") %> prohibited this breed from being saved:</h2>
      <ul>
        <% @breed.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <div class="row">
    <div class="form-group col-sm-8">
      <%= f.label :name, "Nombre: ", class:'col-sm-3 control-label required'  %>
      <div class="input-group input-group-sm col-sm-9">
        <span class="input-group-addon">*</span>
        <%= f.text_field :name, class:"form-control", placeholder:"Nombre de la raza"%>
      </div>                            
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-8">
        <%= f.label :Family_id, "Especie: ", class:'col-sm-3 control-label required' %>
          <div class="input-group input-group-sm col-sm-9">
            <span class="input-group-addon">*</span>
            <%= f.collection_select :Family_id, Family.all, :id, :name, :prompt => true, class:"form-control", placeholder:"Especie" %>
          </div>                            
    </div>
  </div>


  <div class="actions">
    <%= f.submit "Grabar" %>
  </div>
  <br>
  <%= link_to 'Regresar', breeds_path %>
<% end %>
</div>