<!DOCTYPE html>
<html>
  <head>
    <title>Veterinaria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
        <% if user_signed_in? %>
          <%= render "users/shared/opcion" %>
        <% elsif vet_signed_in? %>
          <%= render "vets/shared/opcion" %>
        <%end%>
      </div>
      <!-- /#sidebar-wrapper -->

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <div class="container-fluid">
          <div class="row">    
            <div class="col-sm-10">
              <a href="#menu-toggle" class="btn btn-link btn-xs" id="menu-toggle">&lt;&lt; Opciones</a>
              <h2>Mascotas Per√∫ - <small>Comprometidos con el bienestar de su mascota</small></h2>            
            </div>
            <div class="col-sm-2">
              <!--Inicio Menu-->                            
              <% if user_signed_in? %>
                <%= render "users/shared/menu" %> 
              <% elsif vet_signed_in? %>
                <%= render "vets/shared/menu" %>
              <%end%>
              <!--Fin de menu-->
            </div>
          </div>

          <div class="row">
            <div class="col-lg-9">
              <%= yield %>
            </div>
            <div class="col-lg-3">
              <div class="row">
                <!-- Redes sociales -->
                  
                <!-- /#Redes sociales -->
              </div>
            </div>
          </div>

        </div>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Menu Toggle Script -->
    <script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
        var titulo = $(this).text();
        if (titulo =="<< Opciones") {
          $(this).text("Opciones >>");
        }else{
          $(this).text("<< Opciones");
        };
    });
    </script>
  </body>
</html>     